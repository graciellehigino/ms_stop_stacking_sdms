@article{Svenning2014InfInt,
  title = {The Influence of Interspecific Interactions on Species Range Expansion Rates},
  author = {Svenning, Jens Christian and Gravel, Dominique and Holt, Robert D. and Schurr, Frank M. and Thuiller, Wilfried and M{\"u}nkem{\"u}ller, Tamara and Schiffers, Katja H. and Dullinger, Stefan and Edwards, Thomas C. and Hickler, Thomas and Higgins, Steven I. and Nabel, Julia E.M.S. and Pagel, J{\"o}rn and Normand, Signe},
  year = {2014},
  volume = {37},
